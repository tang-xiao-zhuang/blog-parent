<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace：给哪个接口配置的映射，写接口的全限定类名-->
<mapper namespace="com.zhuang.admin.dao.PermissionDao">
    <insert id="addPermission" parameterType="com.zhuang.admin.pojo.Permission">
        insert into ms_permission(name, path, description)
        values (#{name}, #{path}, #{description});
    </insert>

    <update id="updatePermission" parameterType="com.zhuang.admin.pojo.Permission">
        update ms_permission set name = #{name},path = #{path},description = #{description} where id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        delete from ms_permission where id = #{id}
    </delete>

    <select id="permissionList" resultType="com.zhuang.admin.pojo.Permission">
        select * from ms_permission
        <where>
            <if test="queryString != null and queryString != ''">
                and name = #{queryString}
            </if>
        </where>
        limit #{start},#{end}
    </select>

    <select id="total" resultType="java.lang.Long">
        select count(1)
        from ms_permission
    </select>
</mapper>
